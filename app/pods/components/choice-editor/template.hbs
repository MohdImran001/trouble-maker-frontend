<div class="row {{if isCorrect 'correct'}}">
  <div class="col-8">
    {{#if isEditing}}
      <div class="row justify-content-center align-items-center">
        <div class="col-2">
          <label>Choice Title:</label>
        </div>
        <div class="col-5 input-group">
          <h3> {{input type="text" class="input-text" placeholder="*New Choice, EDIT ME" value=choice.title}} </h3>
        </div>
        <div class="col-5">
          {{markdown-to-html choice.title extensions='katex'}}
        </div>
      </div>
    <div class="row justify-content-center align-items-center">
      <div class="col-2">
        <label>Choice Description:</label>
      </div>
      <div class="col-5 input-group">
        <p>
          {{textarea type="text" class="input-text py-4" placeholder="EDIT ME" value=choice.description}}
        </p>
      </div>
      <div class="col-5">
        {{markdown-to-html choice.description extensions='katex'}}
      </div>
    </div>
    <div class="row align-items-center justify-content-center">
      <div class="col-2">
        Positive Weight:
      </div>
      <div class="col-10 input-group">
        {{input type="number" class="input-text" placeholder="Positive Weight" value=choice.positiveWeight}}
      </div>
    </div>
    <div class="row justify-conten-center align-items-center">
      <div class="col-2">
        Negative Weight:
      </div>
      <div class="col-10 input-group">
        {{input type="number" class="input-text" placeholder="Negative Weight" value=choice.negativeWeight}}
      </div>
    </div>
    {{else}}
      <h3>{{choice.title}}</h3>
      <p>
        {{choice.description}}
      </p>
    {{/if}}
  </div>
  <div class="col-4 choice-actions">
    {{#if isEditing}}
    <span {{action 'saveChoice'}}>
        Save
        <i class="far fa-save"></i>
      </span>
    {{else}}
      <span {{action 'toggleEditing'}}>
        Edit
        <i class="far fa-edit"></i>
      </span>
    {{/if}}

    {{#if isCorrect}}
      <span {{action 'markAsIncorrect'}}>
        <i class="far fa-times-circle"></i>
        Mark as Incorrect
      </span>
    {{else}}
      <span {{action 'markAsCorrect'}}>
        <i class="far fa-check-circle"></i>
        Mark as Correct
      </span>
    {{/if}}

    <span {{action 'deleteChoice'}}>
      Delete
      <i class="far fa-trash-alt"></i>
    </span>
  </div>

</div>

{{yield}}